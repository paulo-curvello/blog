---
const today = new Date();
import "../styles/footer.css";
const { lang } = Astro.params;
---

<footer>
  &copy; 2025 - {today.getFullYear()} - Paulo Curvello. {
    lang === "pt" ? "Todos os direitos reservados." : "All rights reserved."
  }
  <div class="social-links">
    <!-- Tema -->
    <label class="switch switch--theme switch--inline">
      <input
        type="checkbox"
        class="switch__input"
        data-switch="theme"
        aria-label="Alternar tema claro/escuro"
      />
      <span class="switch__track">
        <span class="switch__thumb"></span>
      </span>
    </label>

    <!-- Idioma -->
    <label class="switch switch--lang switch--inline" style="margin-left:12px">
      <input
        type="checkbox"
        class="switch__input"
        data-switch="lang"
        aria-label="Alternar idioma PT/EN"
      />
      <span class="switch__track">
        <span class="switch__thumb"></span>
      </span>
    </label>
  </div>
</footer>
