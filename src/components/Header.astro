---
import { SITE_TITLE } from "../consts";
import HeaderLink from "./HeaderLink.astro";
import "../styles/toggle-switch.css";
import "../styles/header.css";
---

<header>
  <nav>
    <h2><a href="/">{SITE_TITLE}</a></h2>
    <div class="internal-links">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/blog">Blog</HeaderLink>
    </div>
    <div class="settings">
      <!-- Tema -->
      <label class="switch switch--theme switch--inline">
        <input
          id="theme-toggle"
          type="checkbox"
          class="switch__input"
          aria-label="Alternar tema claro/escuro"
        />
        <span class="switch__track">
          <span class="switch__thumb"></span>
        </span>
      </label>

      <!-- Idioma -->
      <label class="switch switch--lang switch--inline" style="margin-left:12px">
        <input
          id="language-toggle"
          type="checkbox"
          class="switch__input"
          aria-label="Alternar idioma PT/EN"
        />
        <span class="switch__track">
          <span class="switch__thumb"></span>
        </span>
      </label>
    </div>
  </nav>

  <!-- scripts: tema + idioma -->
  <script src="/scripts/header.js" defer></script>
  <script src="/scripts/lang.js" defer></script>
</header>
