---
import { SITE_TITLE } from "../consts";
import "../styles/toggle-switch.css";
import "../styles/header.css";
---

<header>
  <nav>
    <h2>{SITE_TITLE}</h2>
    <div class="settings">
      <!-- Tema -->
      <label class="switch switch--theme switch--inline">
        <input
          type="checkbox"
          class="switch__input"
          data-switch="theme"
          aria-label="Alternar tema claro/escuro"
        />
        <span class="switch__track">
          <span class="switch__thumb"></span>
        </span>
      </label>

      <!-- Idioma -->
      <label
        class="switch switch--lang switch--inline"
        style="margin-left:12px"
      >
        <input
          type="checkbox"
          class="switch__input"
          data-switch="lang"
          aria-label="Alternar idioma PT/EN"
        />
        <span class="switch__track">
          <span class="switch__thumb"></span>
        </span>
      </label>
    </div>
  </nav>

  <!-- scripts: tema + idioma -->
  <script src="/scripts/theme.js" defer></script>
  <script src="/scripts/lang.js" defer></script>
</header>
